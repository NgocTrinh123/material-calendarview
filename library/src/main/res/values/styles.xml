<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextAppearance.MaterialCalendarView.Day"
           parent="android:TextAppearance"
           tools:ignore="ResourceName">
        <item name="android:textSize">@dimen/mcv_date_picker_day_text_size</item>
        <item name="android:textColor">@color/mcv_primary_text_inverse_when_activated_material
        </item>
    </style>

    <style name="TextAppearance.MaterialCalendarView.DayOfWeek"
           parent="android:TextAppearance"
           tools:ignore="ResourceName">
        <item name="android:textSize">@dimen/mcv_date_picker_day_of_week_text_size</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.MaterialCalendarView.Month"
           parent="android:TextAppearance"
           tools:ignore="ResourceName">
        <item name="android:textSize">@dimen/mcv_date_picker_month_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>